{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd bot && ./gradlew clean build"
  },
  "deploy": {
    "startCommand": "cd bot && java -jar build/libs/bot-1.0.0.jar",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
